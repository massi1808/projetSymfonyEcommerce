</style>

<div class="example-wrapper">
 
</div>

{# <div class="femme"> #}

<div class="row">
  {% for produit in produits %}
    {% if produit.category == 'accessoires' %} 
      <div class="col">
        <a href="">
          <div class="kabyle1">
            <img class="tof1" src="{{ asset('uploads/' ~ produit.illustration) }}">
            <p>{{ produit.nom }}</p>{{ produit.price }}€
          </div>
        </a>
          <a href="{{ path('add_to_cart', { 'id' : produit.id }) }}" class="btn btn-primary">Ajouter au panier</a>
      </div>
    {% endif %}
  {% endfor %}
</div>


