{% block title %}dmclothing{% endblock %}

{% block body %}
<style>
  .row {
    display: flex;
    flex-wrap: wrap;
  }

  .col {
    flex-basis: 33.33%;
    padding: 10px;
  }

  .kabyle1 {
    background-color: var(--grey);
    border: 12px solid var(--grey);
    padding: 10px;
    text-align: center;
  }

  .tof1 {
    max-width: 100%;
    height: auto;
    width: 99%;
  }

  .nom-produit {
    font-weight: bold;
    margin-bottom: 5px;
  }

