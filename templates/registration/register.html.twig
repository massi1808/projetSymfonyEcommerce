{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h1 align="center">INSCRIPTION</h1>
    <div class="register">

    {{ form_start(registrationForm) }}

    <div class="show">{{ form_row(registrationForm.nom) }}</div>
      
    <div class="show"> {{ form_row(registrationForm.prenom) }}</div>

       
    <div class="show"> {{ form_row(registrationForm.email) }}</div>
       
    <div class="show"> {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}</div>
       
     {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="btn">INSCRIPTION</button>
    {{ form_end(registrationForm) }}
    </div>
{% endblock %}
