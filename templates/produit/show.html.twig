{% extends 'back.html.twig' %}


{% block title %}Produit{% endblock %}


{% block body %}
   <h1>Produit</h1>


   <table class="table">
       <tbody>
           <tr>
               <th>Id</th>
               <td>{{ produit.id }}</td>
           </tr>
           <tr>
               <th>Nom</th>
               <td>{{ produit.nom }}</td>
           </tr>
           <tr>
               <th>Description</th>
               <td>{{ produit.description }}</td>
           </tr>
           <tr>
               <th>Photo</th>
               <td>
                 {% if produit.photo %}
                       <img src="{{ asset('uploads/photos/' ~ produit.photo) }}" alt="Photo du produit">
                   {% else %}
                       Aucune photo disponible
                   {% endif %}
               </td>
              
           </tr>
       </tbody>
   </table>

   {{ include('produit/_delete_form.html.twig') }}
   <a href="{{ path('app_produit') }}">Retour Ã  la liste</a>



   
{% endblock %}
