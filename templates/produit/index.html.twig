{% extends 'back.html.twig' %}


{% block title %}Produit index{% endblock %}


{% block body %}
  


 <table class="table table-bordered">
   <thead>
       <tr>
           <th class="text-center">Id</th>
           <th>Nom</th>
           <th>Description</th>
           <th>Photo</th>
           <th class="text-center">Actions</th>


       </tr>
   </thead>
   <tbody>
   {% for produit in produits %}
       <tr>
           <td class="text-center">{{ produit.id }}</td>
           <td>{{ produit.nom }}</td>
           <td>{{ produit.description }}</td>
           <td class="text-center">  
             


 
               {% if produit.photo %}
                <img src="{{ asset('uploads/photos/' ~ produit.photo) }}" alt="Photo du produit" class="img-thumbnail">
                  {{ produit.photo }}
               {% else %}
                   Aucune photo disponible
               {% endif %}
           </td>
            <td class="text-center">
               {# <a href="{{ path('app_produit_show', {'id': produit.id}) }}" class="btn">Voir</a> #}
               <a href="{{ path('app_produit_edit', {'id': produit.id}) }}" class="btn">Modifier</a>
            {{include('produit/_delete_form.html.twig')}}
           </td>
           
       </tr>
   {% else %}
       <tr>
           <td colspan="5" class="text-center">Aucun produit trouvé.</td>
       </tr>
   {% endfor %}
   </tbody>
</table>


 


{% endblock %}



