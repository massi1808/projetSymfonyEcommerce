{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}
   

    <h1 align="center" class="h3 mb-3 font-weight-normal">CONNEXION</h1> <br>
    
   
   {# <label for="inputEmail">Email</label>  #}
     <input type="email" value="{{ last_username }}" name="email" placeholder="ADRESSE MAIL"id="" class="form-control1" autocomplete="email" required autofocus> <br>
    {# <label for="inputPassword">Password</label> #}
    <input type="password" name="password" id="" class="form-control1"placeholder="MOT DE PASSE" autocomplete="current-password" required><br>
    

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}">
           
          

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="btnco" type="submit">
        CONNEXION
    </button> <br>
     <a class="btndeco" href="{{path('app_forgot_password_request')}}">cliquez si vous avez oubliez votre mot de passe!</a>
      
     
</form>
{% endblock %}
