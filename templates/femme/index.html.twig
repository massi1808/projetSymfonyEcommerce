
{% extends 'base.html.twig' %}

{% block title %}dmclothing{% endblock %}

{% block body %}
<style>
  .row {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(357px, 1fr));
    gap: 90px;
    margin-left: 0%;
    background-color: #73737378;
    padding-left: 7%;
  }
  .col {
    /* Ajoutez ici les styles spécifiques à chaque colonne si nécessaire */
  }
</style>

<div class="row">
  {% for produit in produits %}
    {% if produit.category == 'femme' %} 
      <div class="col">
        <a href="">
          <div class="kabyle1">
            <img class="tof1" src="{{ asset('uploads/' ~ produit.illustration) }}">
            <p>{{ produit.nom }}</p>{{ produit.price }}€
          </div>
        </a>
         <a href="{{ path('add_to_cart', { 'id' : produit.id }) }}" class="btn btn-primary">Ajouter au panier</a>
      </div>
    {% endif %}
  {% endfor %}
</div>


